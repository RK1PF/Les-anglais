{% extends 'base.html.twig' %}

{% block title %} Information de l'association : {{association.nom}}{% endblock %}

{% block body %}
<center>
<h1 class="border border-dark rounded p-2 m-2 text-white bg-primary"> Information de l'association : {{association.nom}}</h1>
<hr><hr>
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div>
    <h2> {{association.nom}}</h2>
        <h3>
            Responsable : {{association.prenomContact}} {{association.nomContact}}
            <br><br>
            Téléphone : {{association.tel}}<br>
            <a href={{association.email}}> Mail : {{association.email}}
            </a>
        </h3>

        <br>
        <a href="{{ path('afficheassociation', {'id':association.id}) }}">
        <img src="{{asset('#') }}" style="width:200px">
        </a><br>
        <br>
        <a href="/association">RETOUR A LA LISTE</a><br>

    {% if (is_granted('ROLE_ADMIN')) %}
        <a href="{{ path('modifassociation', {'id':association.id}) }}">MODIFIER</a><br>
    {% endif %}
        <hr>
</center>
{% endblock %}
