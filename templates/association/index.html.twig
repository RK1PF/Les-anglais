{% extends 'base.html.twig' %}

{% block title %}Liste des Associations{% endblock %}

{% block body %}
<center>
<h1 class="border border-dark rounded p-2 m-2 text-white bg-primary">Liste des Associations</h1>
<hr><hr>
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


    {% for association in associations %}
        <h2> {{ association.nom }} </h2>

        <br>
        <a href="{{ path('afficheassociation', {'id':association.id}) }}">DETAILS
        {# <img src="{{asset('#') }}" style="width:200px"> #}
        </a><br>

        {% if (is_granted('ROLE_ADMIN')) %}
            <a href="{{ path('modifassociation', {'id':association.id}) }}">MODIFIER</a><br>
        {% endif %}
        <hr>
    {% endfor %}


</center>
{% endblock %}
