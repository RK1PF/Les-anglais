{% extends 'base.html.twig' %}

{% block title %}Liste des Associations{% endblock %}

{% block body %}
<center>
<h1 class="border border-dark rounded p-2 m-2 text-white bg-primary">Liste des Associations</h1>
</center>

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div>
    {% for association in associations %}
        <h4> {{association.nom}}</h4>
        <h3>
            {{association.prenom_contact}} 
            {# {{association.nom_contact}}<br> #}
        </h3>

        <br>
        <a href="{{ path('afficheassociation', {'id':association.id}) }}">
        </a><br>
    {% if (is_granted('ROLE_ADMIN')) %}
        <a href="{{ path('modifassociation', {'id':association.id}) }}">MODIFIER</a><br>
    {% endif %}
        <hr>
    {% endfor %}
</div>

{% endblock %}
