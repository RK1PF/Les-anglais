         <div class ="alert alert-danger">
            {{error.messagekey | trans(error.messagedata,'security')}}
        </div>
    {% endif %}
<form action ="{{path('connexion')}}" method="post">
    <div class="form-group">
        <label> login : </label>
        <input type="text" required name="_username" class="form-control">
    </div>
    <div class="form-group">
        <label> password : </label>
        <input type="password" required name="_password" class="form-control">
    </div>
    <input type="submit" class="btn btn-primary" value="S'identifier"></input>
    <input type="hidden" name="_target_path" value="{{path('caroussel')}}"/>
    
</form>
<br>
<a href="{{path('inscription')}}"><button class="btn btn-primary" >Nouveau compte ?</button></a>
{% endblock %}