{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block monTitre %}
	Login
{% endblock %}
{% block body %}
	{{dump(app.user)}}
	{% if error %}
		<div class="alert alert-danger">
			{{error.messagekey | trans(error.messagedata,'security')}}
		</div>
	{% endif %}
	<form action="{{path('login')}}" method="post">
		<div class="form-group">
			<label>
				login :
			</label>
			<input type="text" required name="_nom" class="form-control">
		</div>
		<div class="form-group">
			<label>
				password :
			</label>
			<input type="password" required name="password" class="form-control">
		</div>
		<input type="submit" class="btn btn-primary" value="S'identifier"></input>
	<input type="hidden" name="_target_path" value="{{path('userInscription')}}"/>

</form>
<br>
<a href="{{path('userInscription')}}">
	<button class="btn btn-primary">Nouveau compte ?</button>
</a>{% endblock %}
