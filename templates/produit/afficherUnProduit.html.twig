{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<style>
    body {
        text-align:center;
    }
    section {
        width:900px;
        margin-left: auto;
        margin-right: auto;
        border: solid #000;
        display:inline-block;
        padding: 4px;

    }

    .image {
        width:50%;
        float:left;
    }

    .description {
